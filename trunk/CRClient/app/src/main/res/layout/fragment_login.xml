<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prime_backgroud"
    android:orientation="vertical"
    android:id="@+id/LoginMain"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Collect Router"
        android:gravity="left"
        android:id="@+id/textView12"
        android:background="@color/prime_title_bk"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/level2_title_text"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etUserName"
                android:textColor="@color/prime_edit_text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="password"
                android:textColor="@color/level2_title_text"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:textColor="@color/prime_edit_text" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Login"
            android:id="@+id/btn_login"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <com.collectrouter.crclient.ui.widget.LayoutOptionDistInLogin
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dist_option">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_save_username"
            android:text="save username"
            android:textColor="@color/prime_button_text"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_save_username"
            android:id="@+id/cb_save_password"
            android:text="save password"
            android:textColor="@color/prime_button_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/tv_register_account"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/prime_text_white"/>
    </com.collectrouter.crclient.ui.widget.LayoutOptionDistInLogin>

</LinearLayout>
